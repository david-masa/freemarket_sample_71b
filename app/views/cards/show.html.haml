= render partial: 'layouts/header', locals: { header: @header }
.p-wrapper
  = render 'users/side-bar'
  .c-body
    .c-body_container
      %h2.c-body_container_message お支払い方法
      .c-body_container_inner
        .c-body_container_inner_body 
          クレジットカード情報
          .c-body_container_inner_body_content
            %img{:alt => "visa-logo", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3296506464", :width => "49"}
            .c-body_container_inner_body_content_detail
              = "**** **** **** " + @default_card_information.last4
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            = form_tag(cards_path, method: :delete, id: 'charge-form',  name: "inputForm") do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button.c-body_container_inner_body_content_btn 削除する
              = link_to "戻る", :back, class: "p-card_input_form_container_back"
= render partial: 'top/footer', locals: { footer: @footer }
